<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_nav_header_160"
    android:background="@drawable/nav_header_bg"
    android:orientation="vertical"
    android:paddingBottom="@dimen/spacing_normal_16"
    android:paddingLeft="@dimen/spacing_normal_16"
    android:paddingRight="@dimen/spacing_normal_16"
    android:paddingTop="@dimen/avatar_padding_top"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/drawer_user_avatar"
        android:layout_width="@dimen/spacing_large_60"
        android:layout_height="@dimen/spacing_large_60"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:contentDescription="@string/dummy_content_description"
        app:civ_border_color="@color/color_grey_darker"
        app:civ_border_width="@dimen/line_size_1"/>

    <TextView
        android:id="@+id/drawer_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:fontFamily="@string/roboto_medium"
        android:text="@string/user_first_name"
        android:textColor="@android:color/white"
        android:textSize="@dimen/font_normal_16"/>

</RelativeLayout>