<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_marginRight="@dimen/spacing_medial_24"
    android:layout_marginEnd="@dimen/spacing_medial_24"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_gravity="start">

    <ImageView
        android:contentDescription="@string/dummy_content_description"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_larger_96"
        android:layout_marginStart="@dimen/spacing_larger_96"
        android:layout_marginTop="@dimen/spacing_small_8"
        android:src="@drawable/firebase_icon"
        android:layout_width="@dimen/spacing_medium_32"
        android:layout_height="@dimen/spacing_medium_32"/>

    <!-- Menu Item Image -->
    <ImageView
        android:contentDescription="@string/dummy_content_description"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="24dp"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_marginRight="@dimen/spacing_medial_24"
        android:layout_marginEnd="@dimen/spacing_medial_24"
        android:src="@drawable/basket"/>

</RelativeLayout>